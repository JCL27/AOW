package ar.edu.itba.game;

import com.badlogic.gdx.graphics.g2d.SpriteBatch;

public class UIManager {
	
	private static UIManager instance = null;
	
	public static UIManager getInstance() {
	      if(instance == null) {
	         instance = new UIManager();
	      }
	      return instance;
	   }
	
	private SpriteBatch SB;
	private UIState State = UIState.DEFAULT;
	
	public UIManager(){
	}
	
	public void drawUI(){
		SB.begin();
		switch(State){
		case DEFAULT: 
			SB.draw(elem.getTexture(), (float)elem.getX(),(float) elem.getY(), elem.getWidth()/elem.getScale(), elem.getHeight()/elem.getScale(), 0, 0, elem.getWidth(), elem.getHeight(), false, false);
		case CREATE_UNIT:
		case TERRAIN_UNITS:
		case FLYING_UNITS:
		case UNDERGROUND_UNITS:
		case UPGRADES:
		}
	}
	
	
}
